# BMAD Auto Environment Configuration
DEBUG=true
HOST=localhost
PORT=8000
LOG_LEVEL=INFO

# Database (SQLite for Phase 1 testing)
DATABASE_URL=sqlite+aiosqlite:///./data/bmad_auto_phase1.db

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Agent configuration
MAX_CONCURRENT_WORKFLOWS=5
DEFAULT_TIMEOUT_MINUTES=15
MAX_RETRY_ATTEMPTS=3

# Security (development only)
SECRET_KEY=bmad-auto-phase1-dev-key

# Monitoring
ENABLE_METRICS=true
LANGSMITH_PROJECT=bmad-auto-phase1
